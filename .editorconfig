root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Python files
[*.py]
indent_size = 4

# Batch and PowerShell files (Windows)
[*.{bat,cmd,ps1}]
end_of_line = crlf

# Package files
[{package.json,package-lock.json}]
indent_size = 2
