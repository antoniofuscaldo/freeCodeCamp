{
  "name": "freecodecamp",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:fix": "eslint . --fix --quiet",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{js,json,md}": [
      "prettier --write",
      "eslint --fix"
    ],
    "**/*.{css,html}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "prettier": "^3.7.4",
    "lint-staged": "^16.2.7",
    "@eslint/js": "^9.39.2",
    "globals": "^17.0.0"
  }
}
